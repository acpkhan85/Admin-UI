@using Entity.SmartSchool
@model Entity.SmartSchool.ClassRoomDto
<div class="right_col" role="main" style="min-height: 1160px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Class Room</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="row">
                            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm"><i class="fa fa-plus"></i>&nbsp;Add Division</button>
                        </div>
                        <div class="ln_solid"></div>
                        <form class="form-horizontal form-label-left input_mask">
                            <div class="form-group col-sm-4 col-xs-12">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12">Class</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <select class="form-control">
                                        <option>Choose class</option>
                                        <option>Class V</option>
                                        <option>Class VI</option>
                                        <option>Class VII</option>
                                        <option>Class VIII</option>
                                        <option>Class IX</option>
                                        <option>Class X</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12">Division</label>
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <select class="form-control">
                                        <option>Choose division</option>
                                        <option>A</option>
                                        <option>B</option>
                                        <option>C</option>
                                        <option>D</option>
                                        <option>E</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-4 col-sm-4 col-xs-12">
                                <div class="col-md-8 col-sm-8 col-xs-12">
                                    <button type="button" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>&nbsp;Search</button>
                                </div>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_content">
                                        <div class="x_title">
                                            <h2>Students <small>Students subtitle</small></h2>
                                            <div class="clearfix"></div>
                                        </div>


                                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                            <thead>
                                                <tr role="row">
                                                    <th>Standard </th>
                                                    <th>Division </th>
                                                    <th>Actions </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">5</td>
                                                    <td>A</td>

                                                    <td>
                                                        <i title="view" class="fa fa-eye btn btn-dark" data-toggle="modal" data-target=".bs-example-modal-lg"></i>
                                                        &nbsp;<i title="edit" class="fa fa-pencil btn btn-success" data-toggle="modal" data-target=".bs-example-modal-lg"></i>
                                                        &nbsp;<i title="edit" class="fa fa-close btn btn-danger" data-toggle="modal" data-target=".bs-example-modal-lg"></i>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel2">Add Division</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("", "", new AjaxOptions { HttpMethod = "POST" }, new { @class = "form-horizontal form-label-left" }))
                {
                    <div class="form-group item">
                        <label class="control-label col-md-2 col-sm-2 col-xs-12">Standard</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Standard, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Standard, null, new { @class = "alert" })
                    </div>
                    <div class="form-group item">
                        <label class="control-label col-md-2 col-sm-1 col-xs-12">Division</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Division, new { @class = "form-control col-md-7 col-xs-12" })                            
                        </div>
                        @Html.ValidationMessageFor(model => model.Division, "", new { @class = "alert" })
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-2">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
<style>
    .item .field-validation-error {
        left: 0;
        opacity: 1;
    }
</style>